{% extends 'base.html.twig' %}

{% block title %}Index des fournisseurs{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center mb-3 mt-3">Index des fournisseurs</h1>

    <table class="table table-striped table-dark darker table-sm">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for supplier in suppliers %}
            <tr>
                <td>{{ supplier.id }}</td>
                <td>{{ supplier.name }}</td>
                <td>
                    <a class="text-decoration-none text-dark" href="{{ path('app_supplier_show', {'id': supplier.id}) }}"><i class="fa-solid fa-eye btn btn-warning border border-light Hl" title="Détails"></i></a>
                    <a class="text-decoration-none text-dark" href="{{ path('app_supplier_edit', {'id': supplier.id}) }}"><i class="fa-solid fa-pencil btn btn-warning border border-light Hl" title="Modifier"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun fournisseur trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <button class="btn btn-warning border-light mb-1"><a class="text-decoration-none text-dark" href="{{ path('app_supplier_new') }}">Nouveau fournisseur</a></button>
</div>    
{% endblock %}
