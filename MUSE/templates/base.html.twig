<!DOCTYPE html>
<html lang="fr">

	{% include 'head.html.twig' %}

	<body class="bg-dark text-light">

		{% include 'navbar.html.twig' %}

		{% for message in app.flashes('success') %}
			<div class="row d-flex justify-content-center">
				<div class="col-6 alert alert-success text-center">{{ message }}</div>
			</div>
		{% endfor %}
		{% for message in app.flashes('info') %}
			<div class="row d-flex justify-content-center">
				<div class="col-6 alert alert-primary text-center">{{ message }}</div>
			</div>
		{% endfor %}
		{% for message in app.flashes('error') %}
			<div class="row d-flex justify-content-center">
				<div class="col-6 alert alert-danger text-center">{{ message }}</div>
			</div>
		{% endfor %}

		{# Bootstrap Breadcrumbs #}
		{% if (app.request.attributes.get('_route') != 'login' and app.request.attributes.get('_route') != 'app_home' and app.request.attributes.get('_route') != 'app_register') %}
			{% block breadcrumbs %}

				{% include 'breadcrumbs.html.twig' %}

			{% endblock %}
		{% endif %}

		{% block body %}{% endblock %}

		{% include 'footer.html.twig' %}

		<script src="/js/js.js"></script>
		<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>
		<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
		{% block javascripts %}{% endblock %}
	</body>
</html></body></html>
