{% extends 'base.html.twig' %}

{% block title %}Détails du bon{% endblock %}

{% block body %}
    <h1>Détails du bon</h1>

    <table class="table table-dark darker table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ coupon.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ coupon.code }}</td>
            </tr>
            <tr>
                <th>Taux de remise</th>
                <td>{{ coupon.discountRate }}</td>
            </tr>
            <tr>
                <th>Validé?</th>
                <td>{{ coupon.validated ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <button class="btn btn-warning border border-light mb-1"><a class="text-decoration-none text-light" href="{{ path('app_coupon_index') }}">Retour à la liste</a></button>

    <button class="btn btn-warning border border-light mb-1"><a class="text-decoration-none text-light" href="{{ path('app_coupon_edit', {'id': coupon.id}) }}">Modifier</a></button>

    {{ include('coupon/_delete_form.html.twig') }}
{% endblock %}
