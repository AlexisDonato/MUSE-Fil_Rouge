<div class="card text-light darker border-secondary ml-auto mr-auto mt-3" style="width: 18rem;">
	<img class="card-img-top img-thumbnail border-primary ml-auto mr-auto" src="/img/Muse_rect_no.jpg" style="width: 12rem; border-radius: 30%;" alt="Card image cap">
	<div class="card-header bg-dark">

		<form action="{{ path("app_order_validated") }}" method="POST" class="">
			<div class="row">
				<div class="form-group">
					<div class="input-group text-center">
						<i class="fa fa-user mt-2 surround"></i><br>
						<input class="form-control ml-3" type="text" autocomplete="off" id="card-name" required placeholder="Détenteur de la carte"/>
					</div>
				</div>
			</div>
		</div>
		<ul class="list-group list-group-flush bg-dark">
			<li class="list-group-item bg-dark">
				<div class="row">
					<div class="form-group">
						<div class="input-group">
							<i class="fa fa-credit-card text-light mt-2 surround"></i>
							<input type="text" autocomplete="off" class="form-control ml-3" id="card-number" required placeholder="N° de carte"/>
						</div>
					</div>
				</div>

				<div class="row">
					<div class="form-group">
						<div class="input-group">
							<i class="fa-solid fa-calendar text-light ml-4 mt-2 surround"></i>
							<input type="text" size="4" autocomplete="off" class="form-control ml-1" id="card-expiration" required="required" placeholder="mm/aaaa"/>
						</div>
					</div>
					<div class="form-group">
						<div class="input-group">
							<i class="fa fa-lock ml-2 mt-2 text-light surround"></i>
							<input data-stripe="cvc" type="text" size="4" autocomplete="off" class="form-control ml-1" id="card-cvc" required="required" placeholder="CVC"/>
						</div>
					</div>
				</div>

				{# <div class="row">
					<div class="form-group">
						<div class="input-group">
							<i class="fa fa-map-marker mt-2 surround"></i>
							<input type="text" autocomplete="off" class="form-control ml-3" id="card-zip" placeholder="Zip"/>
						</div>
					</div>
				</div> #}

				<div class="row">
					<div class="text-center">
						<div class="alert alert-danger" style="display:none;"></div>
					</div>
				</div>
			</li>
			<li class="list-group-item  darker border-primary">
				<div class="row">
					<button type="submit" class="btn btn-lg btn-outline-primary ml-auto mr-auto"><a class="text-decoration-none text-secondary">
						Payer {{ total|format_currency('EUR', locale='fr') }}</a>
					</button>
				</div>
			</li>
		</form>
	</div>
</div>
