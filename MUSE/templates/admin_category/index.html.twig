{% extends 'base.html.twig' %}

{% block title %}Index des catégories{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-warning mt-3 mb-3 text-center">Index des catégories</h1>

    <table class="table table-dark darker table-striped">
        <thead>
            <tr class="text-warning">
                <th>Id</th>
                <th>Nom</th>
                <th>Catégorie parente</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>{% if category.parentCategory %}{{ category.parentCategory }}{% else %}-{% endif %}</td>
                <td>
                    <button class="btn btn-warning text-warning"><a class="text-decoration-none" <a href="{{ path('app_admin_category_show', {'id': category.id}) }}">Détails</a></button>
                    <button class="btn btn-warning text-warning"><a class="text-decoration-none" <a href="{{ path('app_admin_category_edit', {'id': category.id}) }}">Modifier</a></button> 
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune catégorie trouvée !</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
<button class="btn btn-warning text-warning mb-3"><a class="text-decoration-none" href="{{ path('app_admin_category_new') }}">Créer une nouvelle catégorie</a></button>
</div>
{% endblock %}
