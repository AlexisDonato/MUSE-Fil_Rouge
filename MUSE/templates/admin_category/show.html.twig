{% extends 'base.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}
<div class="container">
    <h1>Catégories</h1>

    <table class="table table-dark darker">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ category.name }}</td>
            </tr>
        </tbody>
    </table>

    <button class="btn btn-warning text-warning mb-1"><a class="text-decoration-none" href="{{ path('app_admin_category_index') }}">Retour à la liste</a></button>

    <button class="btn btn-warning text-warning mb-1"><a class="text-decoration-none" href="{{ path('app_admin_category_edit', {'id': category.id}) }}">Modifier</a></button>

    {{ include('admin_category/_delete_form.html.twig') }}
</div>
{% endblock %}
