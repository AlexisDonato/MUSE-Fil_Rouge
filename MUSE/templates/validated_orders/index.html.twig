{% extends 'base.html.twig' %}

{% block title %}ValidatedOrders
{% endblock %}

{% block body %}
	<div class="container">
		{% if validatedOrder %}
			<h1 class="mt-3 mb-5 text-center">Commandes validées</h1>
			<table class="table table-dark darker table-stripped">
				<thead>
					<tr class="text-primary">
						{% if is_granted('ROLE_SHIP') %}
							<th>Email</th>
						{% endif %}
						<th>N° Commande</th>
						<th>Date de commande</th>
						<th>Expédié?</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					{% for order in orders %}
						<tr>
							{% if is_granted('ROLE_SHIP') %}
								<td>{{ order.user.email }}</td>
							{% endif %}
							<td>{{order.ClientOrderId}}</td>
							<td>{{order.orderDate|format_datetime('short', 'none', locale='fr')}}</td>
							<td>
								{% if order.shipped == 1 %}
									{{order.shipmentDate|format_datetime('short', 'none', locale='fr')}}
								{% else %}
									-
								{% endif %}
							</td>
							<td>
								<button title="Détails" class="btn btn-info border-light mb-1 Hl">
									<a class="text-decoration-none text-light" href="
											                    {{ path('app_validated_orders_show', {'id': order.id}) }}
											                    ">
										<i class="fa-solid fa-eye"></i>
									</a>
								</button>
							</td>
						</tr>

					{% endfor %}
				</tbody>
			</table>
		{% else %}
			<h1 class="text-center mt-5 mb-5">Aucune commande validée en cours</h3>
		{% endif %}
		<br>
		<br>
		<br>
		<br>
		<br>
		<br>
	</div>
{% endblock %}
