{% extends 'base.html.twig' %}

{% block title %}Produits
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="mt-3 mb-3">Produit</h1>

		<table class="table table-dark darker align-middle">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ product.id }}</td>
				</tr>
				<tr>
					<th>Dénomination</th>
					<td>{{ product.name }}</td>
				</tr>
				<tr>
					<th>Prix</th>
					<td>{{ product.price }}</td>
				</tr>
				<tr>
					<th>Description</th>
					<td>{{ product.description }}</td>
				</tr>
				<tr>
					<th>Contenu</th>
					<td>{{ product.content }}</td>
				</tr>
				<tr>
					<th class="align-middle">Image principale</th>
					<td>{% if product.image %}{{ product.image }} : <img class="img-thumbnail border border-info bg bg-dark" src="/img/{{ product.image }}" onerror="this.onerror=null; this.src='{{ product.image }}'" alt="...">{% else %}Aucune image{% endif %}</td>
				</tr>
		</tr>
		<tr>
			<th>Image1</th>
			<td>{% if product.image1 %}{{ product.image1 }}<img class="img-thumbnail border border-info bg bg-dark" src="/img/{{ product.image1 }}" onerror="this.onerror=null; this.src='{{ product.image1 }}'" alt="...">{% else %}Aucune image{% endif %}</td>
		</tr>
		<tr></tr>
		<tr>
			<th>Image2</th>
			<td>{% if product.image2 %}{{ product.image2 }}<img class="img-thumbnail border border-info bg bg-dark" src="/img/{{ product.image2 }}" onerror="this.onerror=null; this.src='{{ product.image2 }}'" alt="...">{% else %}Aucune image{% endif %}</td>
		</tr>
		<tr>
			<th>Quantité en stock</th>
			<td>{{ product.quantity }}</td>
		</tr>
		<tr>
			<th>Promotion</th>
			<td>{{ product.discount ? 'Yes' : 'No' }}</td>
		</tr>
	</tbody>
</table>

<button class="btn btn-warning text-warning mb-1">
	<a class="text-decoration-none" href="{{ path('app_admin_product_index') }}">Retour à la liste</a>
</button>

<button class="btn btn-warning text-warning mb-1">
	<a class="text-decoration-none" href="{{ path('app_admin_product_edit', {'id': product.id}) }}">Modifier</a>
</button>

{{ include('admin_product/_delete_form.html.twig') }}</div>{% endblock %}
