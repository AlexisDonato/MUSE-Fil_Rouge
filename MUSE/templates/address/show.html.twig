{% extends 'base.html.twig' %}

{% block title %}Address{% endblock %}

{% block body %}
<div class="container">
    <h1 class="mt-3 mb-3 text-center">Détails de l'addresse</h1>

    <table  class="table table-dark darker">
        <tbody>
            {% if is_granted('ROLE_ADMIN') %}<tr>
                <th>Id</th>
                <td>{{ address.id }}</td>
            </tr>{% endif %}
            <tr>
                <th>Titre</th>
                <td>{{ address.name }}</td>
            </tr>
            <tr>
                <th>Pays</th>
                <td>{{ address.country }}</td>
            </tr>
            <tr>
                <th>Code postal</th>
                <td>{{ address.zipcode }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ address.city }}</td>
            </tr>
            <tr>
                <th>Voie</th>
                <td>{{ address.pathType }}</td>
            </tr>
            <tr>
                <th>N° de voie</th>
                <td>{{ address.pathNumber }}</td>
            </tr>
            <tr>
                <th>Adresse dédiée à :</th>
                <td>{% if address.billingAddress %}Facturation{% elseif address.deliveryAddress %}Livraison{% else %}-{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <button class="btn btn-warning mb-3 ml-3"><a class="text-decoration-none text-white" href="{{ path('app_address_index') }}">Retour à la liste</a></button>
<br>
    <button class="btn btn-warning mb-3 ml-3"><a class="text-decoration-none text-white" href="{{ path('app_address_edit', {'id': address.id}) }}">Modifier</a></button>

    {{ include('address/_delete_form.html.twig') }}
    </div>
{% endblock %}
