{% extends 'base.html.twig' %}

{% block title %}Détails de l'addresse{% endblock %}

{% block body %}
<div class="container">
    <h1 class="mt-3 mb-3 text-center">Détails de l'addresse</h1>

    <table  class="table table-dark darker">
        <tbody>
            {% if is_granted('ROLE_ADMIN') %}<tr>
                <th id="audioFont" class="surround h5">Id</th>
                <td>{{ address.id|escape }}</td> {# |escape to avoid XSS injections #}
            </tr>{% endif %}
            <tr>
                <th id="audioFont" class="surround h5">Titre</th>
                <td>{{ address.name|escape }}</td>
            </tr>
            <tr>
                <th id="audioFont" class="surround h5">Pays</th>
                <td>{{ address.country|escape }}</td>
            </tr>
            <tr>
                <th id="audioFont" class="surround h5">Code postal</th>
                <td>{{ address.zipcode|escape }}</td>
            </tr>
            <tr>
                <th id="audioFont" class="surround h5">Ville</th>
                <td>{{ address.city|escape }}</td>
            </tr>
            <tr>
                <th id="audioFont" class="surround h5">Voie</th>
                <td>{{ address.pathType|escape }}</td>
            </tr>
            <tr>
                <th id="audioFont" class="surround h5">N° de voie</th>
                <td>{{ address.pathNumber|escape }}</td>
            </tr>
            <tr>
                <th id="audioFont" class="surround h5">Adresse dédiée à :</th>
                <td>{% if address.billingAddress %}Facturation{% elseif address.deliveryAddress %}Livraison{% else %}-{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <button class="btn btn-warning mb-3 ml-3"><a class="text-decoration-none text-white" href="{{ path('app_client_address_index') }}">Retour à la liste</a></button>
<br>
    <button class="btn btn-warning mb-3 ml-3"><a class="text-decoration-none text-white" href="{{ path('app_client_address_edit', {'id': address.id}) }}">Modifier</a></button>

    {{ include('client_address/_delete_form.html.twig') }}
    </div>
{% endblock %}
